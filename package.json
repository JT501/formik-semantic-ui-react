{
  "version": "0.1.0",
  "name": "formik-semantic-ui-react",
  "author": "Johnny Tsoi",
  "license": "Apache-2.0",
  "homepage": "https://github.com/JT501/formik-semantic-ui-react",
  "repository": {
    "type": "git",
    "url": "https://github.com/JT501/formik-semantic-ui-react.git"
  },
  "bugs": {
    "url": "https://github.com/JT501/formik-semantic-ui-react/issues"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "semantic-release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "endOfLine": "auto"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "docs/CHANGELOG.md"
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "docs/CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "module": "dist/formik-semantic-ui-react.esm.js",
  "size-limit": [
    {
      "path": "dist/formik-semantic-ui-react.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/formik-semantic-ui-react.esm.js",
      "limit": "10 KB"
    }
  ],
  "peerDependencies": {
    "react": ">=16.8.0",
    "semantic-ui-react": "^2.0.0",
    "formik": "^2.0.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@size-limit/preset-small-lib": "^4.6.2",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "formik": "^2.2.0",
    "husky": "^4.3.0",
    "prettier": "^2.1.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "semantic-release": "^17.2.1",
    "semantic-ui-react": "^2.0.0",
    "size-limit": "^4.6.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typescript": "^4.0.3"
  },
  "dependencies": {}
}
